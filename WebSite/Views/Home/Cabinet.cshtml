@{
    Layout = "_Layout"; ;
}

<style>
    .row {
        margin-top: 15px;       
    }
    .col {
        padding-left : 5px
    }
    .col-8 {
        padding-left: 0
    }
</style>

    <div id="cabinetVueModel" class="cabinetInfoTable">
        <h2>Личный кабинет</h2>
        <label id="errorLabel" style='display:none'>Ошибка</label>
        <div class="row">
            <div class="col">Имя</div>
            <input class="col-8"  type="text" v-model="name" />
        </div>
        <div class="row">
            <div class="col">Фамилия</div>
            <input class="col-8"  type="text" v-model="surname" />
        </div>
        <div class="row">
            <div class="col">Отчество</div>
            <input class="col-8"  type="text" v-model="secondName" />
        </div>
        <div class="row">
            <div class="col">Дата рождения</div>
            <div class="col-8">
                <input type="date" v-model="birthday"/>
            </div>
            
        </div>

        <div class="row">
            <div class="col">Email</div>
            <input class="col-8" type="text" v-model="email" />
        </div>
        <div class="row">
            <div class="col">Контактный телефон</div>
            <input class="col-8" type="text" v-model="phone" />
        </div>
        <div class="row">
            <div class="col">Должность</div>
            <label class="col-8">{{role}}</label>
        </div>
        <div>
            <label>Публичный ключ</label>
            <input type="text" v-model="publicKey" />
        </div>
        <div>
            <label>Приватный ключ</label>
            <input type="text" v-model="privateKey" />
        </div>

        <input type="button" v-on:click="SaveChanges" value="Сохранить изменения" />
    </div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Cabinet.js"></script>