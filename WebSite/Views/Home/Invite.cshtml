@using Avokates_CRM.Models.Outputs
@model InviteResult
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width" />
    <title>Invite</title>
</head>
<body>
    @if (Model.Status == ResultBase.StatusOk)
    {
    <div id="createNewUserVueModel">

        <label id="inviteToken" style='display:none'>@Model.InviteToken</label>

        <h3>@Model.CompanyName</h3>
        <h4>Создание нового пользователя</h4>
        <div class="row">
            <label>Логин</label>
            <input type="text" v-model="login" />
        </div>
        <div class="row">
            <label>Пароль</label>
            <input type="text" v-model="password" />
        </div>
        <input class="row" type="button" v-on:click="CreateUser" value="Создать" />

        <div class="row"></div>
    </div>
    }
    else
    {
        <label>@Model.ErrorMessages[0].message</label>
    }
</body>
</html>

<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/Invite.js"></script>
<script src="~/js/main.js"></script>